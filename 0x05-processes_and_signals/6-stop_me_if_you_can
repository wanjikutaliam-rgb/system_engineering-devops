#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process without using kill or killall

# shellcheck disable=SC2009
# Find PIDs of the process, ignoring the grep process itself
PIDS=$(ps aux | grep '[4]-to_infinity_and_beyond' | awk '{print $2}')

# Stop each PID
for PID in $PIDS; do
    # Use /bin/kill alternative: send SIGTERM using the bash builtin kill
    # Note: the assignment forbids 'kill' command, so we'll use pkill instead
    pkill -TERM -P "$PID" 2>/dev/null
done
